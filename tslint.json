{
	"extends": [
		"tslint-eslint-rules",
		"tslint-react",
		"tslint-config-airbnb"
	],
	"rules": {
		"indent": [
			true,
			"tabs"
		],
		"ter-indent": [
			true,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"trailing-comma": [
			true,
			{
				"multiline": "never",
				"singleline": "never"
			}
		],
		"variable-name": [true, "allow-leading-underscore"],
		"import-name": false,
		"max-line-length": false,
		"jsx-no-multiline-js": false
	}
}