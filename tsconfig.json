{
	"compilerOptions": {
		"module": "esnext",
		"target": "es5",
		"esModuleInterop": true,
		"sourceMap": true,
		"removeComments": true,
		"noImplicitAny": true,
		"allowJs": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"outDir": "./build/",
		"jsx": "preserve",
		"skipLibCheck": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"lib": [
			"es2015",
			"dom"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"build",
		"dist"
	]
}