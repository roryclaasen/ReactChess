{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"esModuleInterop": true,
		"sourceMap": true,
		"removeComments": true,
		"noImplicitAny": true,
		"allowJs": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": [
		"src/shared/**/*"
	],
	"exclude": [
		"node_modules",
		"build",
		"dist"
	]
}